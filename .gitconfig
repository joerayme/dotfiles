[user]
    name = Joe Ray
    email = joe@joeray.me
    signingkey = 126790D6804EFECC
[color]
    ui = true
[alias]
    st = status
    co = checkout
    wdiff = diff --color-words
    rh = reset HEAD
    pr = pull --rebase
    l = log --graph --pretty=format:'%C(yellow)%h %Cblue%aN %Cgreen%ar %Cblue%G? %Creset%s'
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[push]
    default = simple
    autoSetupRemote = true
[diff]
    submodule = log
	tool = vimdiff
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX
[commit]
    # gpgsign = true
[rebase]
    autostash = true
[merge]
	tool = vimdiff
[init]
	defaultBranch = main
[includeIf "gitdir:~/code/"]
    path = ~/code/.gitconfig
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

