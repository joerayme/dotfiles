call plug#begin()

" Syntax plugins
Plug 'plasticboy/vim-markdown'
Plug 'ekalinin/Dockerfile.vim'
Plug 'guns/vim-clojure-static'
Plug 'elzr/vim-json'
Plug 'hashivim/vim-terraform'
Plug 'fatih/vim-go'

" Plugin to display a list of tags for the current file
" Mapped to F8 in .vimrc
Plug 'majutsushi/tagbar'

" Toggles comments in files using <c-_><c-_> (inline) or <c-_>b (block)
" See https://github.com/tomtom/tcomment_vim#readme for more keys
Plug 'tomtom/tcomment_vim'

" File finder with fuzzy matching
Plug 'kien/ctrlp.vim'

" Git plugin
Plug 'tpope/vim-fugitive'

" Syntax checker for multiple languages
Plug 'scrooloose/syntastic'

" Status bar (needs patched font)
Plug 'bling/vim-airline'
Plug 'vim-airline/vim-airline-themes'

" Directory browser
Plug 'scrooloose/nerdtree'

" Displays additions, modifications and deletions for the current file in the gutter
Plug 'airblade/vim-gitgutter'

" HTML
Plug 'alvan/vim-closetag'
Plug 'hail2u/vim-css3-syntax'
Plug 'gorodinskiy/vim-coloresque'
Plug 'tpope/vim-haml'

" Better omnicompletion
Plug 'neoclide/coc.nvim', {'branch': 'release'}
Plug 'SirVer/ultisnips'
Plug 'honza/vim-snippets'

" coc extensions
Plug 'neoclide/coc-json', {'do': 'npx yarn install --frozen-lockfile'}
Plug 'neoclide/coc-tsserver', {'do': 'npx yarn install --frozen-lockfile'}
Plug 'josa42/coc-docker.git', {'do': 'npm ci'}
Plug 'fannheyward/coc-pyright.git', {'do': 'npm ci'}

" Allows aligning by different characters. See tabularize in .vimrc
Plug 'godlygeek/tabular.git'

" Expand selection with v, decrease selection with <C-v>
Plug 'terryma/vim-expand-region'

call plug#end()
