filetype off

set rtp+=~/.vim/bundle/vundle
call vundle#begin()

" let Vundle manage Vundle - required
Plugin 'gmarik/vundle'

" Syntax plugins
Plugin 'plasticboy/vim-markdown'
Plugin 'rodjek/vim-puppet'
Plugin 'groenewege/vim-less'
Plugin 'kchmck/vim-coffee-script'
Plugin 'digitaltoad/vim-jade'
Plugin 'ekalinin/Dockerfile.vim'
Plugin 'guns/vim-clojure-static'
Plugin 'derekwyatt/vim-scala'

" Plugin to display a list of tags for the current file
" Mapped to F8 in .vimrc
Plugin 'majutsushi/tagbar'

" Toggles comments in files using <c-_><c-_> (inline) or <c-_>b (block)
" See https://github.com/tomtom/tcomment_vim#readme for more keys
Plugin 'tomtom/tcomment_vim'

" File finder with fuzzy matching
" Mapped to <C-i> in .vimrc
Plugin 'kien/ctrlp.vim'

" Git plugin
Plugin 'tpope/vim-fugitive'

" Syntax checker for multiple languages
Plugin 'scrooloose/syntastic'

" Status bar (needs patched font)
Plugin 'bling/vim-airline'

" Golang
Plugin 'fatih/vim-go'

" Directory browser
Plugin 'scrooloose/nerdtree'

" Displays additions, modifications and deletions for the current file in the gutter
Plugin 'airblade/vim-gitgutter'

" Writing tools
Plugin 'reedes/vim-wordy'

" Better completion for PHP files
Plugin 'spf13/PIV'
Plugin 'arnaud-lb/vim-php-namespace'
Plugin 'shawncplus/phpcomplete.vim'

" Better python support
Plugin 'klen/python-mode'
Plugin 'python.vim'
Plugin 'python_match.vim'
Plugin 'pythoncomplete'

" HTML
Plugin 'amirh/HTML-AutoCloseTag'
Plugin 'hail2u/vim-css3-syntax'
Plugin 'gorodinskiy/vim-coloresque'
Plugin 'tpope/vim-haml'
Plugin 'beyondwords/vim-twig'

" Better omnicompletion
Plugin 'Shougo/neocomplcache.vim'
Plugin 'Shougo/neosnippet'
Plugin 'Shougo/neosnippet-snippets'
Plugin 'honza/vim-snippets'

" Allows aligning by different characters
Plugin 'godlygeek/tabular.git'

call vundle#end()

filetype plugin indent on
